---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

const title = `Donate`;
import { headerData } from '~/data';
import { getStorePermalink } from '~/utils/permalinks';

const meta = {
  title: 'PLEBNET.DEV Thank you ',
};
---

<Layout meta={{ title }}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          type: 'orange',
          text: 'Shop',
          href: getStorePermalink(),
          target: "_blank",
          rel:'noopener noreferrer',
        },
      ]}
      isSticky
    />
  </Fragment>

  <section class="flex items-center h-full p-4">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto">
      <div class="max-w-md text-center">
        <h2 class="mb-4 font-bold text-4xl">Thank you!</h2>
        <p>Thank you for joining! See you at our next <a href="/events">event.</a></p>
      </div>
    </div>
  </section>
</Layout>
